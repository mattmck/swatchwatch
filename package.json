{
  "name": "swatchwatch",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:functions & npm run dev:web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "dev:functions": "npm run start --workspace=packages/functions",
    "dev:db": "docker compose up -d",
    "dev:db:down": "docker compose down",
    "build:web": "npm run build --workspace=apps/web",
    "build:functions": "npm run build --workspace=packages/functions",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "migrate": "npm run migrate --workspace=packages/functions",
    "migrate:dev": "npm run migrate:dev --workspace=packages/functions",
    "migrate:down": "npm run migrate:down --workspace=packages/functions",
    "migrate:down:dev": "npm run migrate:down:dev --workspace=packages/functions",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}
