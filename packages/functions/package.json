{
  "name": "swatchwatch-functions",
  "version": "1.0.0",
  "description": "Azure Functions for SwatchWatch",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "pack": "func pack --output ./dist/functions.zip --skip-install",
    "start": "func start",
    "watch": "tsc -w",
    "migrate": "node -e \"const s=require('./local.settings.json'); Object.entries(s.Values).forEach(([k,v])=>process.env[k]=v); require('child_process').execSync('node-pg-migrate up --migrations-dir migrations --decamelize', {stdio:'inherit'})\"",
    "migrate:down": "node -e \"const s=require('./local.settings.json'); Object.entries(s.Values).forEach(([k,v])=>process.env[k]=v); require('child_process').execSync('node-pg-migrate down --migrations-dir migrations --decamelize', {stdio:'inherit'})\"",
    "migrate:create": "node-pg-migrate create --migrations-dir migrations"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@azure/storage-queue": "^12.17.0",
    "jose": "^6.1.3",
    "pg": "^8.18.0",
    "swatchwatch-shared": "*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "azure-functions-core-tools": "^4.6.0",
    "node-pg-migrate": "^8.0.4",
    "typescript": "^5.3.0"
  }
}
